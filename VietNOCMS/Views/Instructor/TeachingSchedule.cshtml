            ///AI chấm bài//
                function runAiGrading() {
            // 1. Lấy dữ liệu cần thiết
            // Lấy nội dung bài làm từ div hiển thị (Text hoặc nội dung file đã decode)
            // Lưu ý: AI chỉ đọc được text, không đọc được file chưa decode
            var studentContent = $('#submissionViewer').text().trim();

            if (!studentContent || studentContent.length < 10) {
                Swal.fire('Không thể chấm', 'Nội dung bài làm quá ngắn hoặc là file chưa được đọc nội dung.', 'warning');
                return;
            }

            // 2. Hiệu ứng Loading
            Swal.fire({
                title: 'AI đang chấm bài...',
                html: 'Đang phân tích nội dung và đưa ra đánh giá. Vui lòng đợi...',
                allowOutsideClick: false,
                didOpen: () => { Swal.showLoading(); }
            });

            // 3. Gọi API (Sử dụng AiInstructorController đã có)
            $.ajax({
                url: '/AiInstructor/AutoGrade',
                type: 'POST',
                data: {
                  question: "Tiêu đề: " + currentAssignmentTitle + "\n\nYêu cầu chi tiết:\n" + currentAssignmentContent,
            barem: "Thang điểm 100. Đánh giá dựa trên mức độ hoàn thành các yêu cầu trong đề bài.",
            answer: studentContent
                },
                success: function(res) {
                    Swal.close(); // Tắt loading

                    if (res.success) {
                        try {
                            // Backend trả về JSON dạng string, cần parse ra
                            // Lưu ý: Nếu Controller của bạn trả về string JSON thuần, dùng JSON.parse.
                            // Nếu Controller trả về Object Json(new {...}), thì dùng trực tiếp res.data

                            var aiResult = typeof res.data === 'string' ? JSON.parse(res.data) : res.data;

                            // 4. Điền dữ liệu vào ô nhập
                            $('#gradeScore').val(aiResult.Score);
                            $('#gradeFeedback').val(aiResult.Comment + "\n\n(Gợi ý: " + aiResult.Suggestion + ")");

                            // Hiệu ứng báo thành công nhẹ
                            const Toast = Swal.mixin({
                                toast: true, position: 'top-end', showConfirmButton: false, timer: 3000
                            });
                            Toast.fire({ icon: 'success', title: 'AI đã đề xuất điểm số!' });

                        } catch (e) {
                            console.error(e);
                            Swal.fire('Lỗi AI', 'AI trả về định dạng không hợp lệ.', 'error');
                        }
                    } else {
                        Swal.fire('Lỗi', res.message, 'error');
                    }
                },
                error: function() {
                    Swal.close();
                    Swal.fire('Lỗi', 'Không thể kết nối đến Server AI.', 'error');
                }
            });
        }
       
   
