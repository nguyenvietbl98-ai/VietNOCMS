        function saveGrade() {
            const score = $('#gradeScore').val();
            const feedback = $('#gradeFeedback').val();

            if (score === '' || score < 0 || score > 100) {
                Swal.fire('Lỗi', 'Vui lòng nhập điểm hợp lệ (0-100)', 'warning');
                return;
            }

            $.post('/Instructor/GradeSubmission', { progressId: currentProgressId, score: score, feedback: feedback }, function(res) {
                if (res.success) {
                    Swal.fire('Thành công', 'Đã lưu kết quả!', 'success').then(() => {
                        $('#gradingModal').modal('hide');
                        location.reload();
                    });
                } else {
                    Swal.fire('Lỗi', res.message, 'error');
                }
            });
        }

      
        document.getElementById('courseSelect')?.addEventListener('change', function() {
            var courseId = this.value;
            var chapterSelect = document.getElementById('chapterSelect');
            chapterSelect.innerHTML = '<option value="">-- Đang tải dữ liệu... --</option>';
            chapterSelect.disabled = true;

            if (courseId) {
                fetch('/Instructor/GetChapters?courseId=' + courseId)
                    .then(response => response.json())
                    .then(data => {
                        chapterSelect.innerHTML = '<option value="">-- Chọn chương học --</option>';
                        if (data.length === 0) {
                            chapterSelect.innerHTML += '<option disabled>Khóa học này chưa có chương nào</option>';
                        } else {
                            data.forEach(ch => {
                                var option = document.createElement('option');
                                option.value = ch.chapterId;
                                option.text = ch.chapterName;
                                chapterSelect.appendChild(option);
                            });
                            chapterSelect.disabled = false;
                        }
                    });
            } else {
                chapterSelect.innerHTML = '<option value="">-- Vui lòng chọn khóa học trước --</option>';
            }
        });

        // Xử lý AI Generator
        function prepareAiModal() {
            const currentTitle = document.getElementById('assignmentTitle').value;
            if(currentTitle) document.getElementById('aiPromptInput').value = currentTitle;
            document.getElementById('aiResultContainer').style.display = 'none';
            document.getElementById('aiOutputText').value = '';
        }

        function runAiGenerate() {
            const topic = document.getElementById('aiPromptInput').value;
            if (!topic) { Swal.fire('Lỗi', 'Vui lòng nhập chủ đề!', 'warning'); return; }

            document.getElementById('aiLoading').style.display = 'block';
            document.getElementById('aiResultContainer').style.display = 'none';

            // Lấy token an toàn
            let token = document.querySelector('input[name="__RequestVerificationToken"]')?.value;

            $.ajax({
                url: '/Instructor/AutoGenerateAssignmentDesc',
                type: 'POST',
                headers: { "RequestVerificationToken": token },
                data: { title: topic },
                success: function(res) {
                    document.getElementById('aiLoading').style.display = 'none';
                    if (res.success) {
                        document.getElementById('aiResultContainer').style.display = 'block';
                        document.getElementById('aiOutputText').value = res.data;
                    } else {
                        Swal.fire('Lỗi AI', res.message, 'error');
                    }
                },
                error: function() {
                    document.getElementById('aiLoading').style.display = 'none';
                    Swal.fire('Lỗi', 'Không thể kết nối tới Server.', 'error');
                }
            });
        }

