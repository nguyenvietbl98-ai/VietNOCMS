        function openGradingModalByIndex(index) {
            const s = submissionsData[index];
            currentProgressId = s.progressId;

            $('#studentNameTitle').text(s.studentName);
            $('#gradeScore').val(s.score !== null ? s.score : '');
            $('#gradeFeedback').val(s.feedback || '');

            const viewer = $('#submissionViewer');
            viewer.empty();

            if (s.isText) {
               
