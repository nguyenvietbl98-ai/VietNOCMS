                    document.getElementById('assignmentSection').style.display = 'block';
                    break;
            }
        }

        // Drag and Drop functionality
        function initDragAndDrop() {
            const lessonRows = document.querySelectorAll('.lesson-row:not(.header)');
            let draggedElement = null;

            lessonRows.forEach(row => {
                const dragHandle = row.querySelector('.drag-handle-cell');

                dragHandle.addEventListener('mousedown', function(e) {
                    row.setAttribute('draggable', true);
                });

                row.addEventListener('dragstart', function(e) {
                    draggedElement = this;
                    this.style.opacity = '0.5';
                });

                row.addEventListener('dragend', function(e) {
                    this.style.opacity = '1';
                    this.setAttribute('draggable', false);
                });

                row.addEventListener('dragover', function(e) {
                    e.preventDefault();
                    if (this !== draggedElement && !this.classList.contains('header')) {
                        const rect = this.getBoundingClientRect();
                        const midpoint = rect.top + rect.height / 2;

                        if (e.clientY < midpoint) {
                            this.parentNode.insertBefore(draggedElement, this);
                        } else {
                            this.parentNode.insertBefore(draggedElement, this.nextSibling);
                        }
                    }
                });
            });

            console.log('Drag and drop initialized for', lessonRows.length, 'lessons');
        }

