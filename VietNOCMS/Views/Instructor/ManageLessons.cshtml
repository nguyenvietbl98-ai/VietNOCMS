<!-- Modal Add/Edit Lesson -->
<div id="lessonModal" class="modal">
    <div class="modal-content-large">
        <div class="modal-header">
            <h3 class="modal-title" id="lessonModalTitle">Thêm bài học mới</h3>
            <button class="btn-close-modal" onclick="closeLessonModal()">
                <i class="bi bi-x"></i>
            </button>
        </div>
        <form>
            <!-- Lesson Type -->
            <div class="form-section">
                <div class="section-title">
                    <i class="bi bi-grid"></i> Loại bài học
                </div>
                <div class="lesson-type-selector">
                    <label class="type-option selected">
                        <input type="radio" name="lessonType" value="video" checked>
                        <div class="type-icon">🎥</div>
                        <div><strong>Video</strong></div>
                    </label>
                    <label class="type-option">
                        <input type="radio" name="lessonType" value="reading">
                        <div class="type-icon">📖</div>
                        <div><strong>Đọc</strong></div>
                    </label>
                    <label class="type-option">
                        <input type="radio" name="lessonType" value="quiz">
                        <div class="type-icon">❓</div>
                        <div><strong>Quiz</strong></div>
                    </label>
                    <label class="type-option">
                        <input type="radio" name="lessonType" value="assignment">
                        <div class="type-icon">✍️</div>
                        <div><strong>Bài tập</strong></div>
                    </label>
                </div>
            </div>

            <!-- Basic Info -->
            <div class="form-section">
                <div class="section-title">
                    <i class="bi bi-info-circle"></i> Thông tin cơ bản
                </div>
                <div class="form-group">
                    <label class="form-label">Chương <span style="color: var(--danger-color);">*</span></label>
                    <select class="form-select" required>
                        <option value="">-- Chọn chương --</option>
                        <option value="1">Chương 1: Giới thiệu về ASP.NET Core MVC</option>
                        <option value="2">Chương 2: Controllers và Routing</option>
                        <option value="3">Chương 3: Views và Razor Syntax</option>
                    </select>
                </div>
                <div class="form-group">
                    <label class="form-label">Tên bài học <span style="color: var(--danger-color);">*</span></label>
                    <input type="text" class="form-control" placeholder="VD: Tổng quan về ASP.NET Core" required>
                </div>
                <div class="form-group">
                    <label class="form-label">Mô tả ngắn</label>
                    <textarea class="form-control" rows="3" placeholder="Mô tả ngắn gọn về nội dung bài học..."></textarea>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="form-label">Thời lượng (phút)</label>
                            <input type="number" class="form-control" min="1" placeholder="15">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="form-label">Trạng thái</label>
                            <select class="form-select">
                                <option value="draft">Nháp</option>
                                <option value="published">Xuất bản</option>
                            </select>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Video Content -->
            <div class="form-section" id="videoSection">
                <div class="section-title">
                    <i class="bi bi-camera-video"></i> Nội dung video
                </div>
                <div class="form-group">
