@model IEnumerable<VietNOCMS.Models.CourseCollaborator>

@{
    ViewData["Title"] = "Lời mời giảng dạy";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <div class="card border-0 shadow-sm">
        <div class="card-header bg-primary text-white p-4">
            <h4 class="mb-0"><i class="bi bi-envelope-paper"></i> Lời mời tham gia giảng dạy</h4>
        </div>
        <div class="card-body p-0">
            @if (Model != null && Model.Any())
            {
                <div class="list-group list-group-flush">
                    @foreach (var item in Model)
                    {
                        <div class="list-group-item p-4">
                            <div class="d-flex align-items-center justify-content-between flex-wrap gap-3">
                                <div class="d-flex align-items-center gap-3">
                                    <img src="@(!string.IsNullOrEmpty(item.Course.Instructor.Avatar) ? "/uploads/avatars/" + item.Course.Instructor.Avatar : "/img/default-avatar.png")"
                                         class="rounded-circle" width="60" height="60" style="object-fit:cover">

                                    <div>
                                        <h5 class="mb-1">@item.Course.Instructor.FullName</h5>
                                        <p class="mb-1 text-muted">
                                            Đã mời bạn làm <span class="badge bg-info text-dark">@item.Role</span>
                                            cho khóa học <strong>@item.Course.CourseName</strong>
                                        </p>
                                        @if (!string.IsNullOrEmpty(item.Message))
                                        {
                                            <small class="text-secondary"><i class="bi bi-quote"></i> @item.Message</small>
                                        }
                                        <div class="small text-muted mt-1">@item.InvitedAt.ToString("dd/MM/yyyy HH:mm")</div>
                                    </div>
                                </div>

                                <div class="d-flex gap-2">
                                    <button onclick="respond(@item.Id, 'Accept')" class="btn btn-success">
                                        <i class="bi bi-check-lg"></i> Đồng ý
                                    </button>
                                    <button onclick="respond(@item.Id, 'Reject')" class="btn btn-outline-danger">
                                        <i class="bi bi-x-lg"></i> Từ chối
                                    </button>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="text-center py-5 text-muted">
                    <i class="bi bi-inbox fs-1 d-block mb-3"></i>
                    <p>Bạn không có lời mời nào.</p>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function respond(id, action) {
            Swal.fire({
                title: action === 'Accept' ? 'Chấp nhận lời mời?' : 'Từ chối lời mời?',
                text: "Bạn có chắc chắn muốn thực hiện hành động này?",
                icon: 'question',
                showCancelButton: true,
                confirmButtonColor: action === 'Accept' ? '#198754' : '#dc3545',
                confirmButtonText: 'Xác nhận'
            }).then((result) => {
                if (result.isConfirmed) {
                    $.post('/Collaborator/RespondToInvite', { id: id, action: action }, function(res) {
                        if(res.success) {
                            Swal.fire('Thành công', 'Đã xử lý yêu cầu', 'success').then(() => location.reload());
                        } else {
                            Swal.fire('Lỗi', res.message, 'error');
                        }
                    });
                }
            });
        }
    </script>
}