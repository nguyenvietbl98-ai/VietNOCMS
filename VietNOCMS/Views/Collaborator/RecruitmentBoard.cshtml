@model IEnumerable<VietNOCMS.Models.Course>
@{
    ViewData["Title"] = "Cơ hội việc làm Trợ giảng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <div class="text-center mb-5">
        <h1 class="fw-bold text-gradient">Sàn Tuyển Dụng Trợ Giảng</h1>
        <p class="text-muted">Tham gia đội ngũ giảng dạy cùng các chuyên gia hàng đầu</p>
    </div>

    <div class="row">
        @if (Model.Any())
        {
            @foreach (var item in Model)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100 shadow-sm border-0 hover-lift">
                        <div class="card-body">
                            <div class="d-flex align-items-center mb-3">
                                <img src="@(!string.IsNullOrEmpty(item.Instructor.Avatar) ? "/uploads/avatars/" + item.Instructor.Avatar : "/img/default-avatar.png")"
                                     class="rounded-circle me-2" width="40" height="40" style="object-fit:cover">
                                <div>
                                    <h6 class="mb-0 small fw-bold">@item.Instructor.FullName</h6>
                                    <small class="text-muted">Giảng viên</small>
                                </div>
                            </div>

                            <h5 class="card-title text-primary mb-2">
                                <a href="/Courses/Details/@item.CourseId" class="text-decoration-none">@item.CourseName</a>
                            </h5>
                            <span class="badge bg-light text-dark border mb-3">@item.Category.CategoryName</span>

                            <p class="card-text text-muted small line-clamp-2">
                                @item.ShortDescription
                            </p>

                            <hr class="my-3 opacity-25">

                            <div class="d-flex justify-content-between align-items-center">
                                <small class="text-success fw-bold"><i class="bi bi-cash-stack"></i> Thỏa thuận</small>
                                <button class="btn btn-sm btn-primary rounded-pill px-3" onclick="applyJob(@item.CourseId, '@item.CourseName')">
                                    Ứng tuyển ngay
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12 text-center py-5">
                <img src="https://cdn-icons-png.flaticon.com/512/7486/7486744.png" width="100" class="mb-3 opacity-50">
                <p class="text-muted">Hiện chưa có khóa học nào đang tuyển trợ giảng.</p>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        function applyJob(courseId, courseName) {
            // Kiểm tra đăng nhập (nếu cần)
            @if (!User.Identity.IsAuthenticated)
            {
                    <text>
                        Swal.fire('Thông báo', 'Bạn cần đăng nhập để ứng tuyển!', 'warning').then(() => location.href='/Account/Login');
                        return;
                    </text>
            }

            Swal.fire({
                title: 'Ứng tuyển: ' + courseName,
                html: `
                    <p class="small text-muted mb-3">Hãy viết vài dòng giới thiệu về năng lực của bạn</p>
                    <textarea id="applyMsg" class="form-control" rows="4" placeholder="Ví dụ: Em đã có chứng chỉ Java, IELTS 7.0..."></textarea>
                `,
                showCancelButton: true,
                confirmButtonText: 'Gửi hồ sơ',
                cancelButtonText: 'Hủy',
                preConfirm: () => {
                    const msg = document.getElementById('applyMsg').value;
                    if (!msg) {
                        Swal.showValidationMessage('Vui lòng nhập lời nhắn giới thiệu!');
                    }
                    return msg;
                }
            }).then((result) => {
                if (result.isConfirmed) {
                    $.post('/Collaborator/Apply', { courseId: courseId, message: result.value }, function(res) {
                        if(res.success) {
                            Swal.fire('Thành công', res.message, 'success');
                        } else {
                            Swal.fire('Lỗi', res.message, 'error');
                        }
                    });
                }
            });
        }
    </script>
    <style>
        .hover-lift {
            transition: transform 0.2s;
        }

            .hover-lift:hover {
                transform: translateY(-5px);
            }

        .line-clamp-2 {
            display: -webkit-box;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
            overflow: hidden;
        }
    </style>
}