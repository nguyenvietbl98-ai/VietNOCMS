@model VietNOCMS.Models.SettingViewModel
@{
    ViewData["Title"] = "Hồ sơ cá nhân";
    var avatarUrl = !string.IsNullOrEmpty(Model.Avatar) ? $"/uploads/avatars/{Model.Avatar}" : null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <style>

        :root {
            --primary-color: #2563eb;
            --secondary-color: #0ea5e9;
            --accent-color: #f59e0b;
            --text-dark: #1e293b;
            --text-light: #64748b;
            --bg-light: #f8fafc;
        }

        body {
            font-family: 'Inter', sans-serif;
            background: var(--bg-light);
            min-height: 100vh;
            padding-top: 80px;
        }

        .navbar {
            background: rgba(255, 255, 255, 0.98);
            backdrop-filter: blur(10px);
            box-shadow: 0 2px 20px rgba(0, 0, 0, 0.05);
            padding: 1rem 0;
        }

        .navbar-brand {
            font-weight: 700;
            font-size: 1.5rem;
            background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        .profile-container {
            max-width: 900px;
            margin: 2rem auto;
            padding: 0 1rem;
        }

        .profile-header {
            background: white;
            border-radius: 20px;
            padding: 2rem;
            box-shadow: 0 5px 20px rgba(0, 0, 0, 0.08);
            margin-bottom: 2rem;
            text-align: center;
        }

        .profile-avatar {
            width: 120px;
            height: 120px;
            border-radius: 50%;
            background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 3rem;
            font-weight: 700;
            margin: 0 auto 1.5rem;
            box-shadow: 0 10px 30px rgba(37, 99, 235, 0.3);
        }

        .profile-name {
            font-size: 2rem;
            font-weight: 700;
            color: var(--text-dark);
            margin-bottom: 0.5rem;
        }

        .profile-email {
            color: var(--text-light);
            font-size: 1.1rem;
            margin-bottom: 1rem;
        }

        .role-badge {
            display: inline-block;
            padding: 0.5rem 1.5rem;
            border-radius: 30px;
            font-weight: 600;
            font-size: 0.9rem;
        }

        .badge-admin {
            background: linear-gradient(135deg, #dc2626, #ef4444);
            color: white;
        }

        .badge-instructor {
            background: linear-gradient(135deg, #059669, #10b981);
            color: white;
        }

        .badge-student {
            background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
            color: white;
        }

        .info-card {
            background: white;
            border-radius: 16px;
            padding: 2rem;
            box-shadow: 0 5px 20px rgba(0, 0, 0, 0.08);
            margin-bottom: 2rem;
        }

        .info-card-title {
            font-size: 1.25rem;
            font-weight: 700;
            color: var(--text-dark);
            margin-bottom: 1.5rem;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .info-item {
            display: flex;
            justify-content: space-between;
            padding: 1rem 0;
            border-bottom: 1px solid #e2e8f0;
        }

            .info-item:last-child {
                border-bottom: none;
            }

        .info-label {
            color: var(--text-light);
            font-weight: 500;
        }

        .info-value {
            color: var(--text-dark);
            font-weight: 600;
        }

        .action-buttons {
            display: flex;
            gap: 1rem;
            justify-content: center;
            flex-wrap: wrap;
            margin-top: 2rem;
        }

        .btn-primary-custom {
            background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
            color: white;
            padding: 0.75rem 2rem;
            border-radius: 10px;
            font-weight: 600;
            border: none;
            transition: all 0.3s ease;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
        }

            .btn-primary-custom:hover {
                transform: translateY(-2px);
                box-shadow: 0 10px 25px rgba(37, 99, 235, 0.3);
                color: white;
            }

        .btn-outline-custom {
            color: var(--primary-color);
            border: 2px solid var(--primary-color);
            padding: 0.75rem 2rem;
            border-radius: 10px;
            font-weight: 600;
            background: white;
            transition: all 0.3s ease;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
        }

            .btn-outline-custom:hover {
                background: var(--primary-color);
                color: white;
                transform: translateY(-2px);
            }

        .alert {
            border-radius: 10px;
            border: none;
            padding: 1rem;
            margin-bottom: 1.5rem;
        }

        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 1rem;
            margin-top: 1.5rem;
        }

        .stat-card {
            background: var(--bg-light);
            padding: 1.5rem;
            border-radius: 12px;
            text-align: center;
        }

        .stat-value {
            font-size: 2rem;
            font-weight: 700;
            color: var(--primary-color);
            margin-bottom: 0.5rem;
        }

        .stat-label {
            color: var(--text-light);
            font-size: 0.9rem;
        }

        @@media (max-width: 768px) {
            .profile-name {
                font-size: 1.5rem;
            }

            .action-buttons {
                flex-direction: column;
            }

            .btn-primary-custom,
            .btn-outline-custom {
                width: 100%;
                justify-content: center;
            }
        }
 
        .avatar-wrapper {
            position: relative;
            width: 120px;
            height: 120px;
            margin: 0 auto 1.5rem;
        }

        .profile-avatar {
            width: 100%;
            height: 100%;
            border-radius: 50%;
            background: linear-gradient(135deg, #2563eb, #0ea5e9);
            color: white;
            font-size: 3rem;
            font-weight: 700;
            display: flex;
            align-items: center;
            justify-content: center;
            overflow: hidden;
            border: 4px solid white;
            box-shadow: 0 10px 30px rgba(37, 99, 235, 0.3);
        }

            .profile-avatar img {
                width: 100%;
                height: 100%;
                object-fit: cover;
            }

        /* Nút camera upload */
        .btn-upload-avatar {
            position: absolute;
            bottom: 0;
            right: 0;
            width: 35px;
            height: 35px;
            border-radius: 50%;
            background: white;
            border: 1px solid #e2e8f0;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            color: #64748b;
            transition: 0.2s;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        }

            .btn-upload-avatar:hover {
                background: #2563eb;
                color: white;
            }

        /* Tabs Style */
        .nav-tabs {
            border-bottom: 2px solid #e2e8f0;
            margin-bottom: 20px;
        }

        .nav-link {
            border: none;
            color: #64748b;
            font-weight: 600;
            padding: 12px 20px;
        }

            .nav-link.active {
                color: #2563eb;
                border-bottom: 2px solid #2563eb;
                background: transparent;
            }

            .nav-link:hover {
                color: #2563eb;
            }

        .history-item {
            padding: 15px;
            border-bottom: 1px solid #f1f5f9;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

            .history-item:last-child {
                border-bottom: none;
            }
    </style>
</head>
<body>
    <div class="profile-container">

        <div class="profile-header">
            <div class="avatar-wrapper">
                <div class="profile-avatar" id="avatarPreview">
                    @if (avatarUrl != null)
                    {
                        <img src="@avatarUrl" alt="Avatar" />
                    }
                    else
                    {

                        <span>@Model.InitialLetter</span>
                    }
                </div>
                <input type="file" id="avatarInput" hidden accept="image/*">
                <label for="avatarInput" class="btn-upload-avatar" title="Đổi ảnh đại diện">
                    <i class="bi bi-camera-fill"></i>
                </label>
            </div>

            <h1 class="profile-name" id="displayFullName">@Model.FullName</h1>
            <p class="profile-email"><i class="bi bi-envelope"></i> @Model.Email</p>

            <span class="role-badge badge-student">@Model.RoleDisplayName</span>

        </div>

        <div class="info-card position-relative">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="info-card-title mb-0"><i class="bi bi-person-circle"></i> Thông tin tài khoản</h2>
                <button class="btn btn-sm btn-outline-primary" data-bs-toggle="modal" data-bs-target="#editProfileModal">
                    <i class="bi bi-pencil"></i> Chỉnh sửa
                </button>
            </div>

            <div class="info-item">
                <span class="info-label">Họ và tên:</span>
                <span class="info-value" id="infoFullName">@Model.FullName</span>
            </div>
            <div class="info-item">
                <span class="info-label">Số điện thoại:</span>
                <span class="info-value" id="infoPhone">@(Model.PhoneNumber ?? "Chưa cập nhật")</span>
            </div>
            <div class="info-item">
                <span class="info-label">Ngày tham gia:</span>
                <span class="info-value">@Model.CreatedAt.ToString("dd/MM/yyyy")</span>
            </div>
        </div>

        <div class="info-card p-0 overflow-hidden">
            <ul class="nav nav-tabs px-3 pt-3" id="profileTabs" role="tablist">
                <li class="nav-item">
                    <button class="nav-link active" data-bs-toggle="tab" data-bs-target="#learning-tab">
                        <i class="bi bi-clock-history me-2"></i>Hoạt động gần đây
                    </button>
                </li>
                <li class="nav-item">
                    <button class="nav-link" data-bs-toggle="tab" data-bs-target="#payment-tab">
                        <i class="bi bi-receipt me-2"></i>Lịch sử thanh toán
                    </button>
                </li>
            </ul>

            <div class="tab-content p-3">
                <div class="tab-pane fade show active" id="learning-tab">
                    @if (Model.RecentActivities.Any())
                    {
                        @foreach (var item in Model.RecentActivities)
                        {
                            <div class="history-item">
                                <div>
                                    <div class="fw-bold text-dark">@item.CourseName</div>
                                    <div class="small text-muted">Học bài: @item.LessonName</div>
                                </div>
                                <div class="text-end small text-secondary">
                                    @item.AccessTime.ToString("dd/MM HH:mm")
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="text-center py-4 text-muted">Chưa có hoạt động nào.</div>
                    }
                </div>

                <div class="tab-pane fade" id="payment-tab">
                    @if (Model.PurchaseHistory.Any())
                    {
                        @foreach (var item in Model.PurchaseHistory)
                        {
                            <div class="history-item">
                                <div>
                                    <div class="fw-bold text-primary">@item.CourseName</div>
                                    <div class="small text-muted">@item.Date.ToString("dd/MM/yyyy")</div>
                                </div>
                                <div class="text-end">
                                    <div class="fw-bold">@item.Amount.ToString("N0") đ</div>
                                    <span class="badge bg-success">@item.Status</span>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="text-center py-4 text-muted">Chưa có giao dịch nào.</div>
                    }
                </div>
            </div>
        </div>

        <div class="action-buttons">
            <a asp-controller="Account" asp-action="ChangePassword" class="btn-outline-custom">
                <i class="bi bi-key"></i> Đổi mật khẩu
            </a>
        </div>

    </div>

    <div class="modal fade" id="editProfileModal" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header border-0">
                    <h5 class="modal-title fw-bold">Cập nhật thông tin</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <form id="editProfileForm">
                        <div class="mb-3">
                            <label class="form-label text-secondary">Họ và tên</label>
                            <input type="text" class="form-control" id="inputName" value="@Model.FullName" required>
                        </div>
                        <div class="mb-3">
                            <label class="form-label text-secondary">Số điện thoại</label>
                            <input type="text" class="form-control" id="inputPhone" value="@Model.PhoneNumber">
                        </div>
                    </form>
                </div>
                <div class="modal-footer border-0">
                    <button type="button" class="btn btn-light" data-bs-dismiss="modal">Hủy</button>
                    <button type="button" class="btn btn-primary" onclick="saveProfile()">Lưu thay đổi</button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <script>
        // 1. Xử lý Upload Avatar
        document.getElementById('avatarInput').addEventListener('change', function() {
            if (this.files && this.files[0]) {
                var formData = new FormData();
                formData.append('avatarFile', this.files[0]);

                $.ajax({
                    url: '/Account/UploadAvatar',
                    type: 'POST',
                    data: formData,
                    contentType: false,
                    processData: false,
                    success: function(res) {
                        if (res.success) {
                            // Cập nhật ảnh ngay lập tức
                            $('#avatarPreview').html(`<img src="${res.newUrl}" alt="Avatar">`);
                            Swal.fire({ icon: 'success', title: 'Đã cập nhật ảnh đại diện!', toast: true, position: 'top-end', showConfirmButton: false, timer: 3000 });
                        } else {
                            Swal.fire('Lỗi', res.message, 'error');
                        }
                    }
                });
            }
        });

        // 2. Xử lý Sửa thông tin (Modal)
        function saveProfile() {
            var name = $('#inputName').val();
            var phone = $('#inputPhone').val();

            $.ajax({
                url: '/Account/UpdateProfileInfo',
                type: 'POST',
                data: { fullName: name, phone: phone },
                success: function(res) {
                    if (res.success) {
                        // Cập nhật UI
                        $('#displayFullName').text(name);
                        $('#infoFullName').text(name);
                        $('#infoPhone').text(phone);

                        // Đóng modal
                        var modal = bootstrap.Modal.getInstance(document.getElementById('editProfileModal'));
                        modal.hide();

                        Swal.fire({ icon: 'success', title: 'Cập nhật thành công!', toast: true, position: 'top-end', showConfirmButton: false, timer: 3000 });
                    } else {
                        Swal.fire('Lỗi', res.message || 'Có lỗi xảy ra', 'error');
                    }
                }
            });
        }
    </script>
</body>
</html>