@model VietNOCMS.Models.RegisterViewModel
@{
    ViewBag.Title = "Đăng ký - VietN OCMS";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;700&display=swap" rel="stylesheet">

    <style>
        /* giữ nguyên toàn bộ CSS từ trước */
        body {
            font-family: 'Inter', sans-serif;
            background: linear-gradient(135deg,#667eea 0%,#764ba2 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
        }

        .auth-container {
            width: 100%;
            max-width: 500px;
        }

        .auth-card {
            background: white;
            border-radius: 20px;
            box-shadow: 0 20px 60px rgba(0,0,0,0.3);
            padding: 2.5rem;
            animation: slideUp 0.5s ease;
            margin: 20px 0;
        }

        @@keyframes slideUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .logo-section {
            text-align: center;
            margin-bottom: 2rem;
        }

        .logo-icon {
            font-size: 3rem;
            background: linear-gradient(135deg,#2563eb,#0ea5e9);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        .logo-text {
            font-size: 1.75rem;
            font-weight: 700;
            background: linear-gradient(135deg,#2563eb,#0ea5e9);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            margin-top: 0.5rem;
        }

        .auth-title {
            font-size: 1.5rem;
            font-weight: 700;
            color: #1e293b;
            margin-bottom: 0.5rem;
            text-align: center;
        }

        .auth-subtitle {
            color: #64748b;
            text-align: center;
            margin-bottom: 2rem;
        }

        .form-label {
            font-weight: 600;
            color: #1e293b;
            margin-bottom: 0.5rem;
            font-size: 0.9rem;
        }

        .form-control {
            padding: 0.75rem 1rem;
            border: 2px solid #e2e8f0;
            border-radius: 10px;
            font-size: 0.95rem;
            transition: all 0.3s ease;
        }

            .form-control:focus {
                border-color: #2563eb;
                box-shadow: 0 0 0 4px rgba(37,99,235,0.1);
            }

        .input-group {
            position: relative;
        }

        .input-icon {
            position: absolute;
            right: 15px;
            top: 50%;
            transform: translateY(-50%);
            color: #64748b;
            font-size: 1.1rem;
        }

        .password-toggle {
            cursor: pointer;
            transition: color 0.3s ease;
        }

            .password-toggle:hover {
                color: #2563eb;
            }

        .btn-primary {
            background: linear-gradient(135deg,#2563eb,#0ea5e9);
            border: none;
            padding: 0.875rem;
            border-radius: 10px;
            font-weight: 600;
            font-size: 1rem;
            width: 100%;
            margin-top: 1rem;
        }

            .btn-primary:hover {
                transform: translateY(-2px);
                box-shadow: 0 10px 25px rgba(37,99,235,0.3);
            }

        .field-validation-error {
            color: #dc2626;
            font-size: 0.875rem;
            margin-top: 0.25rem;
            display: block;
        }

        .back-home {
            position: absolute;
            top: 20px;
            left: 20px;
            color: white;
            text-decoration: none;
            font-weight: 600;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

            .back-home:hover {
                color: white;
                transform: translateX(-5px);
            }
    </style>
</head>

<body>
    <a href="@Url.Action("Index", "Home")" class="back-home"><i class="bi bi-arrow-left"></i> Về trang chủ</a>

    <div class="auth-container">
        <div class="auth-card">
            <div class="logo-section">
                <div class="logo-icon"><i class="bi bi-mortarboard-fill"></i></div>
                <div class="logo-text">VietN OCMS</div>
            </div>

            <h2 class="auth-title">Đăng ký tài khoản</h2>
            <p class="auth-subtitle">Tạo tài khoản để bắt đầu học tập cùng chúng tôi</p>

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success">@TempData["SuccessMessage"]</div>
            }

            <form asp-action="Register" asp-controller="Account" method="post" class="auth-form" enctype="multipart/form-data">
                @*multipart/form-data    hãy cắt nhỏ file này ra thành từng gói tin và gửi lên server *@
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                <div class="mb-3">
                    <label asp-for="FullName" class="form-label"></label>
                    <div class="input-group">
                        <input asp-for="FullName" class="form-control" placeholder="Nguyễn Văn A" autocomplete="name" />
                        <span class="input-icon"><i class="bi bi-person"></i></span>
                    </div>
                    <span asp-validation-for="FullName" class="field-validation-error"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Email" class="form-label"></label>
                    <div class="input-group">
                        <input asp-for="Email" class="form-control" placeholder="example@email.com" autocomplete="email" />
                        <span class="input-icon"><i class="bi bi-envelope"></i></span>
                    </div>
                    <span asp-validation-for="Email" class="field-validation-error"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="PhoneNumber" class="form-label"></label>
                    <div class="input-group">
                        <input asp-for="PhoneNumber" class="form-control" placeholder="0912345678" autocomplete="tel" />
                        <span class="input-icon"><i class="bi bi-telephone"></i></span>
                    </div>
                    <span asp-validation-for="PhoneNumber" class="field-validation-error"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Role" class="form-label"></label>
                    <select asp-for="Role" class="form-select" id="Role">
                        <option value="">-- Chọn vai trò --</option>
                        <option value="Student">Sinh viên</option>
                        <option value="Teacher">Giảng viên</option>
                    </select>
                    <span asp-validation-for="Role" class="field-validation-error"></span>
                </div>

                <div id="instructorFields" style="display:none;">
                    <div class="mb-3">
                        <label asp-for="CV" class="form-label">Upload CV (PDF, DOCX)</label>
                        <input asp-for="CV" type="file" class="form-control" accept=".pdf,.doc,.docx" />
                        <span asp-validation-for="CV" class="field-validation-error"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="InstructorDescription" class="form-label">Mô tả kinh nghiệm</label>
                        <textarea asp-for="InstructorDescription" class="form-control" rows="4" placeholder="Mô tả kinh nghiệm giảng dạy..."></textarea>
                        <span asp-validation-for="InstructorDescription" class="field-validation-error"></span>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="Password" class="form-label"></label>
                    <div class="input-group">
                        <input asp-for="Password" class="form-control" id="passwordInput" autocomplete="new-password" />
                        <span class="input-icon password-toggle" onclick="togglePassword('passwordInput','toggleIcon1')">
                            <i class="bi bi-eye" id="toggleIcon1"></i>
                        </span>
                    </div>
                    <div class="password-strength">
                        <span id="strengthText" style="font-weight:600;"></span>
                    </div>
                    <span asp-validation-for="Password" class="field-validation-error"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ConfirmPassword" class="form-label"></label>
                    <div class="input-group">
                        <input asp-for="ConfirmPassword" class="form-control" id="confirmPasswordInput" autocomplete="new-password" />
                        <span class="input-icon password-toggle" onclick="togglePassword('confirmPasswordInput','toggleIcon2')">
                            <i class="bi bi-eye" id="toggleIcon2"></i>
                        </span>
                    </div>
                    <span asp-validation-for="ConfirmPassword" class="field-validation-error"></span>
                </div>

                <div class="mb-3 form-check">
                    <input asp-for="AgreeToTerms" class="form-check-input" id="agreeTerms" />
                    <label asp-for="AgreeToTerms" class="form-check-label">Tôi đồng ý với <a href="#">Điều khoản sử dụng</a> và <a href="#">Chính sách bảo mật</a></label>
                    <span asp-validation-for="AgreeToTerms" class="field-validation-error"></span>
                </div>

                <button type="submit" class="btn btn-primary">Đăng ký ngay</button>
            </form>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.5/dist/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@3.2.12/dist/jquery.validate.unobtrusive.min.js"></script>

    <script>
        function togglePassword(inputId, iconId){
            const input=document.getElementById(inputId);
            const icon=document.getElementById(iconId);
            if(input.type==='password'){ input.type='text'; icon.classList.replace('bi-eye','bi-eye-slash'); }
            else{ input.type='password'; icon.classList.replace('bi-eye-slash','bi-eye'); }
        }

        // Password strength (only text)
        document.getElementById('passwordInput').addEventListener('input', function(e){
            const pwd=e.target.value;
            const text=document.getElementById('strengthText');
            if(!pwd){ text.textContent=''; return; }
            let strength='Yếu';
            if(pwd.length>=6) strength='Trung bình';
            if(pwd.length>=10 && /[A-Z]/.test(pwd) && /[a-z]/.test(pwd) && /\d/.test(pwd)) strength='Mạnh';
            text.textContent='Độ mạnh mật khẩu: '+strength;
        });
    </script>
    <script>
        // Lấy select Role
        const roleSelect = document.getElementById("Role");
        const instructorFields = document.getElementById("instructorFields");

        function toggleInstructorFields() {
            if(roleSelect.value === "Teacher"){
                instructorFields.style.display = "block";
            } else {
                instructorFields.style.display = "none";
            }
        }

        // Lắng nghe sự kiện change
        roleSelect.addEventListener("change", toggleInstructorFields);

        // Khi load lại trang (ví dụ form bị lỗi)
        window.onload = toggleInstructorFields;
    </script>
</body>

</html>