        function openViewSubmission(date, name, content, fileUrl) {
            // 1. Hiển thị thông tin cơ bản
            document.getElementById('viewTime').innerText = date;
            document.getElementById('viewStatus').innerHTML = '<span class="badge bg-success">Đã nộp thành công</span>';

            // 2. Hiển thị nội dung bài làm (Content)
            // Nếu nội dung rỗng thì hiện thông báo
            var contentDisplay = content ? content : "<span class='text-muted fst-italic'>Không có nội dung văn bản.</span>";
            document.getElementById('viewContent').innerHTML = contentDisplay;

            // 3. Hiển thị file đính kèm (File URL)
            var fileSection = document.getElementById('viewFileSection');
            var fileLink = document.getElementById('viewFileLink');

            if (fileUrl) {
                fileSection.classList.remove('d-none');
                fileLink.href = fileUrl;
                // Lấy tên file từ đường dẫn để hiển thị cho đẹp
                var fileName = fileUrl.split('/').pop();
                fileLink.innerHTML = `<i class="bi bi-download me-2"></i> Tải về (${fileName})`;
            } else {
                fileSection.classList.add('d-none');
            }

            new bootstrap.Modal(document.getElementById('viewSubmissionModal')).show();
        }
