            var contentHtml = contentDiv ? contentDiv.innerHTML : "Không tìm thấy nội dung.";

            document.getElementById('modalAssignTitle').innerText = title;
            document.getElementById('modalAssignBody').innerHTML = contentHtml;
            document.getElementById('modalGoToLearnBtn').href = '/Courses/Learn?lessonId=' + lessonId;

            var myModal = new bootstrap.Modal(document.getElementById('assignmentContentModal'));
            myModal.show();
