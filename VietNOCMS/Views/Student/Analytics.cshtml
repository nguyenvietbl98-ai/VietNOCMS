<div class="analytics-container">
    <div class="container">
        <div class="page-header">
            <div class="container">
                <h1><i class="bi bi-graph-up-arrow"></i> Phân tích học tập</h1>
                <p>Theo dõi tiến độ và hiệu suất học tập của bạn</p>
            </div>
        </div>

        <div class="stats-row">
            <div class="stat-card">
                <div class="stat-icon">
                    <i class="bi bi-clock-history"></i>
                </div>
                <div class="stat-value">@Model.TotalStudyHours <small style="font-size: 1rem; font-weight: 500;">giờ</small></div>
                <div class="stat-label">Tổng thời gian học</div>
                <span class="stat-trend up">
                    <i class="bi bi-arrow-up"></i> Tích lũy
                </span>
            </div>

            <div class="stat-card success">
                <div class="stat-icon">
                    <i class="bi bi-check-circle"></i>
                </div>
                <div class="stat-value">@Model.CompletedLessons <small style="font-size: 1rem; font-weight: 500;">bài</small></div>
                <div class="stat-label">Bài học hoàn thành</div>
                <span class="stat-trend up">
                    <i class="bi bi-check-all"></i> Đã xong
                </span>
            </div>

            <div class="stat-card warning">
                <div class="stat-icon">
                    <i class="bi bi-lightning"></i>
                </div>
                <div class="stat-value">@Model.CompletionRate%</div>
                <div class="stat-label">Tiến độ tổng thể</div>
                <span class="stat-trend up">
                    <i class="bi bi-graph-up"></i> Trung bình
                </span>
            </div>

            <div class="stat-card info">
                <div class="stat-icon">
                    <i class="bi bi-trophy"></i>
                </div>
                <div class="stat-value">@Model.CurrentStreak <small style="font-size: 1rem; font-weight: 500;">ngày</small></div>
                <div class="stat-label">Chuỗi học liên tiếp</div>
                @if (Model.CurrentStreak > 0)
                {
                    <span class="stat-trend up">
                        <i class="bi bi-fire"></i> Đang cháy!
                    </span>
                }
                else
                {
                    <span class="stat-trend" style="background: #f1f5f9; color: #64748b;">
                        <i class="bi bi-pause"></i> Đã dừng
                    </span>
                }
            </div>
        </div>

        <div class="analytics-grid">
            <div class="grid-full">
                <div class="chart-card">
                    <div class="chart-header">
                        <h3 class="chart-title">
                            <i class="bi bi-calendar-week"></i>
                            Biểu đồ thời gian học (7 ngày qua)
                        </h3>
                        <div class="chart-filter">
                            <button class="filter-btn active">7 ngày</button>
                        </div>
                    </div>
                    <div class="chart-container">
                        <canvas id="timeChart"></canvas>
                    </div>
                </div>
            </div>

            <div class="grid-8">
                <div class="chart-card">
                    <div class="chart-header">
                        <h3 class="chart-title">
                            <i class="bi bi-pie-chart"></i>
                            Phân bổ kiến thức
                        </h3>
                    </div>
                    <div class="chart-container">
                        <canvas id="categoryChart"></canvas>
                    </div>

                    <div class="custom-legend">
                        @if (Model.CategoryLabels.Any())
                        {
                            @for (int i = 0; i < Model.CategoryLabels.Count; i++)
                            {
                                var color = chartColors[i % chartColors.Length];
                                <div class="legend-item">
                                    <div class="legend-color" style="background: @color;"></div>
                                    <span>@Model.CategoryLabels[i] (@Model.CategoryData[i])</span>
                                </div>
                            }
                        }
                        else
                        {
                            <div class="text-muted">Chưa có dữ liệu khóa học.</div>
                        }
                    </div>
                </div>
            </div>

            <div class="grid-4">
                <div class="chart-card">
                    <div class="chart-header">
                        <h3 class="chart-title">
                            <i class="bi bi-speedometer2"></i>
                            Ghi chú
                        </h3>
                    </div>
                    <div class="d-flex flex-column gap-3">
                        <div class="alert alert-light border-0 shadow-sm">
                            <strong><i class="bi bi-info-circle text-primary"></i> Tương tác:</strong>
                            <p class="mb-0 small text-muted">Bạn thường học vào buổi tối. Hãy duy trì thói quen này!</p>
                        </div>
                        <div class="alert alert-light border-0 shadow-sm">
                            <strong><i class="bi bi-bar-chart text-success"></i> Hiệu suất:</strong>
                            <p class="mb-0 small text-muted">Bạn hoàn thành trung bình @(Model.TotalStudyHours > 0 ? (Model.CompletedLessons / Model.TotalStudyHours).ToString("0.0") : "0") bài học mỗi giờ.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="insights-grid">
            <div class="insight-card">
                <i class="insight-icon bi bi-lightbulb"></i>
                <h4 class="insight-title">Mẹo học tập</h4>
                <p class="insight-description">
                    @Model.StudyTip
                </p>
            </div>

            @if (Model.HasAchievement)
            {
                <div class="insight-card success">
                    <i class="insight-icon bi bi-star"></i>
                    <h4 class="insight-title">Thành tích nổi bật</h4>
                    <p class="insight-description">
                        Tuyệt vời! Bạn đã duy trì chuỗi học tập liên tiếp. Hãy tiếp tục phát huy để nhận huy hiệu nhé!
                    </p>
                </div>
            }
            else
            {
                <div class="insight-card warning">
                    <i class="insight-icon bi bi-exclamation-triangle"></i>
                    <h4 class="insight-title">Cần chú ý</h4>
                    <p class="insight-description">
                        Đừng để gián đoạn quá lâu. Hãy dành ít nhất 15 phút mỗi ngày để duy trì thói quen học tập.
                    </p>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Màu sắc từ Server (để đồng bộ với Legend)
        const colors = @Html.Raw(Json.Serialize(chartColors));

        // 1. Time Chart - Bar Chart (Dữ liệu thật)
        const timeCtx = document.getElementById('timeChart').getContext('2d');
        const timeChart = new Chart(timeCtx, {
            type: 'bar',
            data: {
                labels: @Html.Raw(Json.Serialize(Model.ChartLabels)),
                datasets: [{
                    label: 'Thời gian học (giờ)',
                    data: @Html.Raw(Json.Serialize(Model.ChartValues)),
                    backgroundColor: function(context) {
                        const gradient = context.chart.ctx.createLinearGradient(0, 0, 0, 400);
                        gradient.addColorStop(0, '#2563eb');
                        gradient.addColorStop(1, '#0ea5e9');
                        return gradient;
                    },
                    borderRadius: 10,
                    borderSkipped: false,
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: { display: false },
                    tooltip: {
                        backgroundColor: '#1e293b',
                        padding: 12,
                        cornerRadius: 8,
                        callbacks: {
                            label: function(context) {
                                return context.parsed.y + ' giờ';
                            }
                        }
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true,
                        grid: { color: '#e2e8f0', drawBorder: false },
                        ticks: { callback: function(value) { return value + 'h'; } }
                    },
                    x: {
                        grid: { display: false, drawBorder: false }
                    }
                }
            }
        });

        // 2. Category Chart - Doughnut Chart (Dữ liệu thật)
        const categoryCtx = document.getElementById('categoryChart').getContext('2d');
        const categoryChart = new Chart(categoryCtx, {
            type: 'doughnut',
            data: {
                labels: @Html.Raw(Json.Serialize(Model.CategoryLabels)),
                datasets: [{
                    data: @Html.Raw(Json.Serialize(Model.CategoryData)),
                    backgroundColor: colors, // Dùng mảng màu đã định nghĩa
                    borderWidth: 0,
                    hoverOffset: 15
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: { display: false }, 
                    tooltip: {
                        backgroundColor: '#1e293b',
                        padding: 12,
                        cornerRadius: 8
                    }
                },
                cutout: '70%'
            }
        });
    </script>
