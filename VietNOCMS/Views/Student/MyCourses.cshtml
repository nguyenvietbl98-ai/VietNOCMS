@model List<VietNOCMS.Models.CourseViewModel>

@{
    ViewData["Title"] = "Khóa học của tôi";
}

@section Styles {
    <style>
        .page-header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            padding: 3rem 0;
            margin-top: 0px;
            color: white;
        }

        .stats-card {
            background: white;
            border-radius: 16px;
            padding: 1.5rem;
            box-shadow: 0 5px 20px rgba(0, 0, 0, 0.08);
            transition: all 0.3s ease;
            height: 100%;
        }

            .stats-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
            }

        .stats-icon {
            width: 60px;
            height: 60px;
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.5rem;
            margin-bottom: 1rem;
        }

        .course-card {
            background: white;
            border-radius: 16px;
            overflow: hidden;
            box-shadow: 0 5px 20px rgba(0, 0, 0, 0.08);
            transition: all 0.3s ease;
            height: 100%;
            display: flex;
            flex-direction: column;
        }

            .course-card:hover {
                transform: translateY(-8px);
                box-shadow: 0 15px 40px rgba(0, 0, 0, 0.15);
            }

        .course-image {
            width: 100%;
            height: 200px;
            object-fit: cover;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        }

        .course-content {
            padding: 1.5rem;
            flex: 1;
            display: flex;
            flex-direction: column;
        }

        .course-category {
            display: inline-block;
            padding: 0.25rem 0.75rem;
            background: rgba(102, 126, 234, 0.1);
            color: #667eea;
            border-radius: 20px;
            font-size: 0.875rem;
            font-weight: 600;
            margin-bottom: 0.75rem;
        }

        .course-title {
            font-size: 1.25rem;
            font-weight: 700;
            color: var(--text-dark);
            margin-bottom: 0.75rem;
            line-height: 1.4;
            /* Giới hạn 2 dòng */
            display: -webkit-box;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
            overflow: hidden;
        }

        .course-instructor {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            color: var(--text-light);
            font-size: 0.875rem;
            margin-bottom: 1rem;
        }

        .progress-wrapper {
            margin-top: auto;
        }

        .progress-label {
            display: flex;
            justify-content: space-between;
            margin-bottom: 0.5rem;
            font-size: 0.875rem;
            font-weight: 600;
        }

        .progress {
            height: 8px;
            border-radius: 10px;
            background: #e2e8f0;
            margin-bottom: 1rem;
        }

        .progress-bar {
            background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
            border-radius: 10px;
            transition: width 0.5s ease;
        }

        .course-actions {
            display: flex;
            gap: 0.5rem;
        }

        .btn-continue {
            flex: 1;
            background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
            color: white;
            border: none;
            padding: 0.75rem;
            border-radius: 10px;
            font-weight: 600;
            transition: all 0.3s ease;
            text-decoration: none;
            text-align: center;
        }

            .btn-continue:hover {
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(37, 99, 235, 0.3);
                color: white;
            }

            .btn-continue.bg-success {
                background: #10b981 !important;
            }

        .btn-details {
            background: white;
            border: 2px solid var(--border-color);
            color: var(--text-dark);
            padding: 0.75rem 1.5rem;
            border-radius: 10px;
            font-weight: 600;
            transition: all 0.3s ease;
            text-decoration: none;
            display: flex;
            align-items: center;
        }

            .btn-details:hover {
                border-color: var(--primary-color);
                color: var(--primary-color);
            }

        .filter-tabs {
            display: flex;
            gap: 1rem;
            margin-bottom: 2rem;
            flex-wrap: wrap;
        }

        .filter-tab {
            padding: 0.75rem 1.5rem;
            background: white;
            border: 2px solid var(--border-color);
            border-radius: 10px;
            font-weight: 600;
            color: var(--text-dark);
            cursor: pointer;
            transition: all 0.3s ease;
        }

            .filter-tab:hover, .filter-tab.active {
                background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
                color: white;
                border-color: transparent;
            }

        .empty-state {
            text-align: center;
            padding: 4rem 2rem;
        }

            .empty-state i {
                font-size: 4rem;
                color: var(--text-light);
                margin-bottom: 1rem;
            }

        .certificate-badge {
            position: absolute;
            top: 1rem;
            right: 1rem;
            background: #10b981; /* success color */
            color: white;
            padding: 0.5rem 1rem;
            border-radius: 10px;
            font-size: 0.875rem;
            font-weight: 600;
            display: flex;
            align-items: center;
            gap: 0.5rem;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        }

        .bg-warning {
            background: #f59e0b !important;
        }

        .text-warning {
            color: #f59e0b !important;
        }
    </style>
}

<div class="page-header">
    <div class="container">
        <h1 class="mb-3"><i class="bi bi-journal-bookmark"></i> Khóa học của tôi</h1>
        <p class="lead mb-0">Quản lý và theo dõi tiến độ học tập của bạn</p>
    </div>
</div>

<div class="container py-5">
    <div class="row g-4 mb-5">
        <div class="col-md-3 col-6">
            <div class="stats-card">
                <div class="stats-icon" style="background: rgba(37, 99, 235, 0.1); color: var(--primary-color);">
                    <i class="bi bi-book"></i>
                </div>
                <h3 class="mb-1">@Model.Count</h3>
                <p class="text-muted mb-0">Đã đăng ký</p>
            </div>
        </div>
        <div class="col-md-3 col-6">
            <div class="stats-card">
                <div class="stats-icon" style="background: rgba(16, 185, 129, 0.1); color: #10b981;">
                    <i class="bi bi-check-circle"></i>
                </div>
                <h3 class="mb-1">@Model.Count(c => c.Progress == 100 && c.EnrollmentStatus == "Approved")</h3>
                <p class="text-muted mb-0">Đã hoàn thành</p>
            </div>
        </div>
        <div class="col-md-3 col-6">
            <div class="stats-card">
                <div class="stats-icon" style="background: rgba(245, 158, 11, 0.1); color: #f59e0b;">
                    <i class="bi bi-clock-history"></i>
                </div>
                <h3 class="mb-1">@Model.Sum(c => c.DurationInHours)h</h3>
                <p class="text-muted mb-0">Tổng giờ học</p>
            </div>
        </div>
        <div class="col-md-3 col-6">
            <div class="stats-card">
                <div class="stats-icon" style="background: rgba(239, 68, 68, 0.1); color: #ef4444;">
                    <i class="bi bi-award"></i>
                </div>
                <h3 class="mb-1">@Model.Count(c => c.Progress == 100 && c.EnrollmentStatus == "Approved")</h3>
                <p class="text-muted mb-0">Chứng chỉ</p>
            </div>
        </div>
    </div>

    <div class="filter-tabs">
        <button class="filter-tab active" data-filter="all">
            <i class="bi bi-grid"></i> Tất cả
        </button>
        <button class="filter-tab" data-filter="learning">
            <i class="bi bi-play-circle"></i> Đang học
        </button>
        <button class="filter-tab" data-filter="completed">
            <i class="bi bi-check-circle"></i> Đã hoàn thành
        </button>
        <button class="filter-tab" data-filter="pending">
            <i class="bi bi-hourglass-split"></i> Chờ duyệt
        </button>
    </div>

    <div class="row g-4" id="coursesContainer">
        @if (Model != null && Model.Any())
        {
            @foreach (var course in Model)
            {
                // Tính toán logic hiển thị
                var progress = course.Progress;
                var enrollmentStatus = course.EnrollmentStatus;
                var isApproved = enrollmentStatus == "Approved";
                var isPending = enrollmentStatus == "Pending";
                var status = (isApproved && progress == 100) ? "completed" : (isApproved ? "learning" : "pending");

                // Thêm class filter-item và thuộc tính data-status cho JS lọc
                <div class="col-lg-4 col-md-6 filter-item" data-status="@status">
                    <div class="course-card">
                        <div class="position-relative">
                            <div class="course-image" style="@(string.IsNullOrEmpty(course.Thumbnail)
                                                                                      ? ""
                                                                                      : $"background-image:url('/uploads/{course.Thumbnail}'); background-size:cover;")">
                            </div>

                            @if (isPending)
                            {
                                <span class="certificate-badge" style="background: #f59e0b; top: 0.5rem;">
                                    <i class="bi bi-hourglass-split"></i> Chờ phê duyệt
                                </span>
                            }
                            else if (isApproved && progress == 100)
                            {
                                <span class="certificate-badge">
                                    <i class="bi bi-award"></i> Đã hoàn thành
                                </span>
                            }
                        </div>
                        <div class="course-content">
                            <span class="course-category">@(course.CategoryName ?? "Chung")</span>
                            <h3 class="course-title">@course.CourseName</h3>
                            <div class="course-instructor">
                                <i class="bi bi-person-circle"></i>
                                <span>@(course.InstructorName ?? "Admin")</span>
                            </div>

                            <div class="progress-wrapper">
                                <div class="progress-label">
                                    <span>Tiến độ</span>
                                    <span class="@(progress == 100 && isApproved ? "text-success" : (isPending ? "text-warning" : "text-primary"))">
                                        @(isPending ? "Chờ duyệt" : progress + "%")
                                    </span>
                                </div>
                                <div class="progress">
                                    <div class="progress-bar @(progress == 100 && isApproved ? "bg-success" : (isPending ? "bg-warning" : ""))" 
                                         style="width: @(isPending ? 0 : progress)%"></div>
                                </div>

                                <div class="course-actions">
                                    @if (isPending)
                                    {
                                        <button class="btn-continue" disabled style="opacity: 0.6; cursor: not-allowed;">
                                            <i class="bi bi-lock"></i> Chờ phê duyệt
                                        </button>
                                    }
                                    else
                                    {
                                        <a href="@Url.Action("Learn", "Courses", new { id = course.CourseId })"
                                           class="btn-continue @(progress == 100 ? "bg-success" : "")">
                                            <i class="bi @(progress == 100 ? "bi-award" : "bi-play-circle")"></i>
                                            @(progress == 100 ? "Xem lại" : "Tiếp tục học")
                                        </a>
                                    }
                                    <a href="@Url.Action("Details", "Courses", new { id = course.CourseId })" class="btn-details">
                                        <i class="bi bi-three-dots"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12">
                <div class="empty-state">
                    <i class="bi bi-emoji-frown"></i>
                    <h3>Bạn chưa đăng ký khóa học nào</h3>
                    <p class="text-muted">Hãy khám phá thư viện khóa học phong phú của chúng tôi ngay hôm nay!</p>
                    <a href="@Url.Action("ExploreCourse", "Student")" class="btn btn-primary-custom mt-3">
                        Khám phá khóa học
                    </a>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const filterTabs = document.querySelectorAll('.filter-tab');
            const filterItems = document.querySelectorAll('.filter-item');

            filterTabs.forEach(tab => {
                tab.addEventListener('click', function() {
                    // 1. Xử lý Active Tab
                    filterTabs.forEach(t => t.classList.remove('active'));
                    this.classList.add('active');

                    // 2. Lấy giá trị filter từ data-attribute
                    const filterValue = this.getAttribute('data-filter');

                    // 3. Lọc Items
                    filterItems.forEach(item => {
                        const itemStatus = item.getAttribute('data-status');

                        if (filterValue === 'all' || filterValue === itemStatus) {
                            // Hiện item với hiệu ứng fade in (nếu muốn)
                            item.style.display = 'block';
                            item.style.animation = 'fadeIn 0.5s';
                        } else {
                            item.style.display = 'none';
                        }
                    });
                });
            });
        });
    </script>

    <style>
        /* Animation nhỏ cho mượt mà */
        @@keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(10px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
    </style>
}