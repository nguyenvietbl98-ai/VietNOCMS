@model VietNOCMS.ViewModels.InstructorEditProfileViewModel

<div class="modal fade" id="editProfileModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow-lg">
            <div class="modal-header bg-light border-0">
                <h5 class="modal-title fw-bold">Chỉnh sửa hồ sơ cá nhân</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <div class="modal-body p-4">
                <form id="editProfileForm" enctype="multipart/form-data">
                    <div class="text-center mb-4">
                        <div class="position-relative d-inline-block">
                            <img id="avatarPreview"
                                 src="@(!string.IsNullOrEmpty(Model.CurrentAvatar) ? "/uploads/avatars/" + Model.CurrentAvatar : "/images/default-avatar.png")"
                                 class="rounded-circle border border-3 border-white shadow-sm"
                                 style="width: 100px; height: 100px; object-fit: cover;"
                                 onerror="this.src='/images/default-avatar.png'">

                            <label for="avatarUpload" class="position-absolute bottom-0 end-0 bg-primary text-white rounded-circle p-2 shadow-sm"
                                   style="cursor: pointer; width: 32px; height: 32px; display: flex; align-items: center; justify-content: center;">
                                <i class="bi bi-camera-fill" style="font-size: 0.8rem;"></i>
                            </label>

                            <input type="file" id="avatarUpload" name="AvatarFile" class="d-none" accept="image/*">
                        </div>
                        <div class="small text-muted mt-2">Nhấn vào icon máy ảnh để thay đổi</div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold small text-muted">Họ và tên</label>
                        <input type="text" class="form-control" name="FullName" value="@Model.FullName" required>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold small text-muted">Giới thiệu bản thân</label>
                        <textarea class="form-control" name="Bio" rows="5" placeholder="Chia sẻ kinh nghiệm và đam mê của bạn...">@Model.Bio</textarea>
                        <div class="form-text small">Giới thiệu ngắn gọn về bạn.</div>
                    </div>
                </form>
            </div>

            <div class="modal-footer border-0 bg-light">
                <button type="button" class="btn btn-light text-muted fw-bold" data-bs-dismiss="modal">Hủy bỏ</button>
                <button type="button" id="btnSaveProfile" class="btn btn-primary fw-bold px-4">
                    <i class="bi bi-check-lg me-1"></i> Lưu thay đổi
                </button>
            </div>
        </div>
    </div>
</div>